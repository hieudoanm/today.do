{
  "name": "@graphql/apollo",
  "version": "0.0.1",
  "description": "TypeScript - GraphQL - Apollo",
  "main": "dist/server",
  "repository": "git@github.com:hieudoanm/hieudoanm.git",
  "author": "hieudoanm <hieumdoan@gmail.com> (https://hieudoanm.github.io)",
  "license": "GPL-3.0",
  "private": true,
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "format": "prettier --cache --write .",
    "serve": "webpack serve --mode=development",
    "codegen": "graphql-codegen --config codegen.ts || true",
    "dev": "concurrently \"pnpm codegen\" \"pnpm webpack:watch\" \"pnpm dev:nodemon\"",
    "dev:nodemon": "nodemon ./dist/server.js --watch dist",
    "webpack:watch": "webpack --progress --watch",
    "start": "kill-port 5000 && node ./dist/server",
    "prebuild": "rimraf ./dist && prisma generate",
    "build": "webpack --mode=production",
    "test": "jest",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@apollo/datasource-rest": "6.4.1",
    "@apollo/server": "5.1.0",
    "@graphql-tools/schema": "10.0.29",
    "@prisma/client": "6.19.0",
    "graphql": "16.12.0",
    "pino": "10.1.0"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@graphql-codegen/cli": "6.0.2",
    "@graphql-codegen/introspection": "5.0.0",
    "@graphql-codegen/typescript": "5.0.4",
    "@graphql-codegen/typescript-resolvers": "5.1.2",
    "@graphql-tools/webpack-loader": "7.0.0",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "@types/webpack-node-externals": "3.0.4",
    "@webpack-cli/generators": "3.0.7",
    "@yaacovcr/transform": "0.0.8",
    "concurrently": "9.2.1",
    "eslint": "9.39.1",
    "globals": "16.5.0",
    "jest": "30.2.0",
    "kill-port": "2.0.1",
    "nodemon": "3.1.11",
    "prettier": "3.6.2",
    "prisma": "6.19.0",
    "rimraf": "6.1.0",
    "ts-jest": "29.4.5",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.47.0",
    "webpack": "5.102.1",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2",
    "webpack-node-externals": "3.0.0"
  }
}
