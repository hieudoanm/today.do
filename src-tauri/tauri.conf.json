{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "today.do",
	"version": "0.0.1",
	"identifier": "io.github.hieudoanm.today.do",
	"build": {
		"frontendDist": "../docs",
		"devUrl": "http://localhost:3000",
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build"
	},
	"app": {
		"windows": [
			{
				"title": "today.do",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
