{
	"name": "today.do",
	"version": "0.0.1",
	"private": true,
	"description": "Today Do",
	"keywords": [
		"today",
		"todo"
	],
	"homepage": "https://github.com/hieudoanm/today.do#readme",
	"bugs": {
		"url": "https://github.com/hieudoanm/today.do/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/hieudoanm/today.do.git"
	},
	"license": "GPL-3.0",
	"author": "hieudoanm <hieumdoan@gmail.com> (https://hieudoanm.github.io)",
	"packageManager": "pnpm@10.17.1",
	"scripts": {
		"predev": "kill-port 3000",
		"dev": "next dev --turbopack",
		"prebuild": "rimraf docs",
		"build": "next build --turbopack",
		"postbuild": "touch docs/.nojekyll",
		"build:tauri": "tauri build",
		"build:android": "rimraf mobile/android && cap add android",
		"build:ios": "rimraf mobile/ios && cap add ios",
		"build:mobile": "pnpm run build:android && pnpm run build:ios",
		"prestart": "kill-port 3000",
		"start": "next start",
		"lint": "eslint",
		"format": "prettier --cache --write .",
		"prepare": "husky"
	},
	"dependencies": {
		"@capacitor/android": "7.4.3",
		"@capacitor/core": "7.4.3",
		"@capacitor/ios": "7.4.3",
		"next": "15.5.4",
		"react": "19.1.1",
		"react-dom": "19.1.1"
	},
	"devDependencies": {
		"@capacitor/cli": "7.4.3",
		"@eslint/eslintrc": "3.3.1",
		"@tailwindcss/postcss": "4.1.13",
		"@tauri-apps/cli": "2.8.4",
		"@types/node": "24.5.2",
		"@types/react": "19.1.13",
		"@types/react-dom": "19.1.9",
		"daisyui": "5.1.14",
		"eslint": "9.36.0",
		"eslint-config-next": "15.5.4",
		"husky": "9.1.7",
		"kill-port": "2.0.1",
		"prettier-plugin-tailwindcss": "0.6.14",
		"rimraf": "6.0.1",
		"tailwindcss": "4.1.13",
		"typescript": "5.9.2"
	}
}
